<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - Brainstorm Paradise</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <header>
        <div class="logo-container">
            <img src="/images/brainstorm_logo.png" alt="Brainstorm Paradise Logo" class="logo-img">
            <h1 class="logo-title">Brainstorm Paradise</h1>
        </div>
        <nav>
            <ul>
                <li><a href="/books/all">Books</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <h2>Your Cart</h2>
        <div class="cart-container">
            <% books.forEach(book=> { %>
                <div class="cart-item">
                    <img src="/images/<%= book.image %>" alt="<%= book.title %>" class="book-cover">
                    <div class="cart-item-details">
                        <h3>
                            <%= book.title %>
                        </h3>
                        <p>by <%= book.author %>
                        </p>
                        <p>$<%= book.price %>
                        </p>
                        <p>Quantity: <%= book.quantity %>
                        </p>
                        <p>By user email ID: <%= email %>
                        </p>
                        <p>on: <%= book.created_at %>
                        </p>

                    </div>
                </div>
                <% }) %>
        </div>
    </main>
    <a href="/" class="btn btn-home">Go to Home</a>
    <footer>
        <p>&copy; 2023 Brainstorm Paradise</p>
    </footer>

    <script src="/javascripts/main.js"></script>
</body>

</html>